{
  "manifest_version": 3,
  "name": "WhatsApp Tools",
  "version": "1.0",
  "description": "Extract phone numbers and send bulk messages on WhatsApp",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "privacy.html"
}
